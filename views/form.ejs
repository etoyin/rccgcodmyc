<%- include ('partials/header.ejs'); %>
  <div class="container">
    <% if (message != '') { %>
      <p class="text-center text-danger"><%= message %></p>
    <% } %>
    
    <form style="padding-top: 20px;" class="add-player-form" action="" method="post" enctype="multipart/form-data">
      <div class="form-row">
        <div class="form-group col-md-4">
          <p class="error nameError"></p>
          <input type="text" class="form-control" name="name" placeholder="Full Name" required>
        </div>
        <div class="form-group col-md-4">
          <p class="error addressError"></p>
          <input type="text" class="form-control" name="address" placeholder="Address" required>
        </div>
        <div class="form-group col-md-4">
          <p class="error numberError"></p>
          <input type="number" class="form-control" name="number" placeholder="WhatsApp Phone Number" required>
        </div>
        <div class="form-group col-md-4">
          <p class="error emailError"></p>
          <input type="email" class="form-control" name="email" placeholder="Email" required>
        </div>

        <div class="form-group col-md-4">
          <p class="error dobError"></p>
          <input 
            onfocus="(this.type='date')" 
            onblur="(this.type='text')"
            class="form-control" 
            name="dob" 
            placeholder="Date of Birth" required>
        </div>

        <!-----------------Gender------------------->
        
        <div class="form-group col-md-4">
          <p class="error genderError"></p>
          <select type="text" class="form-control" name="gender" required>
            <option value="">Gender</option>
            <option value="male">Male</option>
            <option value="female">Female</option>
          </select>
        </div>

        <!-----------------Marital Status------------------->

        <div class="form-group col-md-4">
          <p class="error maritalError"></p>
          <select type="text" class="form-control" name="marital_status" required>
            <option value="">Marital Status</option>
            <option value="single">Single</option>
            <option value="married">Married</option>
            <option value="divorced">Divorced</option>
            <option value="widow(er)">Widow(er)</option>
          </select>
        </div>
        
        <div class="form-group col-md-4">
          <p class="error educationError"></p>
          <select type="text" class="form-control" name="education" required>
            <option value="">Select Education Qualification</option>
            <option value="PhD">PhD</option>
            <option value="Masters">Masters</option>
            <option value="PGD">PGD</option>
            <option value="Bachelor">Bachelor</option>
            <option value="HND">HND</option>
            <option value="OND">OND</option>
            <option value="Trade Certificate">Trade Certificate</option>
            <option value="SSCE">SSCE</option>
            <option value="BECE">BECE</option>
          </select>
        </div>

        <div class="form-group col-md-4">
          <p class="error baptismError"></p>
          <select type="text" class="form-control" name="water_baptism" required>
            <option value="">Water Baptism</option>
            <option value="yes">Yes</option>
            <option value="no">No</option>
          </select>
        </div>

        <!-----------------Church Training----------------------->
        <p class="error trainingError"></p>
        <ul style="padding-left: 40px" class="training form-group col-md-4">
          <label class="label">Church Training Obtained</label>
          <li class="">
            <label class="form-check-label">
              <input type="checkbox" class="form-check-input" value="Believer's Class">Believer's Class
            </label>
          </li>
          <li class="">
            <label class="form-check-label">
              <input type="checkbox" class="form-check-input" value="Baptismal Class">Baptismal Class
            </label>
          </li>
          <li class="">
            <label class="form-check-label">
              <input type="checkbox" class="form-check-input" value="Workers-in-training">Workers-in-trainin
            </label>
          </li>
          <li class="">
            <label class="form-check-label">
              <input type="checkbox" class="form-check-input" value="School of Disciples">School of Disciples
            </label>
          </li>
          <li class="">
            <label class="form-check-label">
              <input type="checkbox" class="form-check-input" value="Bible College">Bible College
            </label>
          </li>
        </ul>

        <!-----------------Departments----------------------->
        <p class="error departmentError"></p>
        <div style="padding-left: 40px" class="form-group departments col-md-4">
          <label class="label">Department(s)</label>
          <div class="">
            <label class="form-check-label">
              <input type="checkbox" class="form-check-input" value="Technical">Technical
            </label>
          </div>
          <div class="">
            <label class="form-check-label">
              <input type="checkbox" class="form-check-input" value="Sanitation">Sanitation
            </label>
          </div>
          <div class="">
            <label class="form-check-label">
              <input type="checkbox" class="form-check-input" value="Drama">Drama
            </label>
          </div>
          <div class="">
            <label class="form-check-label">
              <input type="checkbox" class="form-check-input" value="Choir">Choir
            </label>
          </div>
          <div class="">
            <label class="form-check-label">
              <input type="checkbox" class="form-check-input" value="Sunday School">Sunday School
            </label>
          </div>
        </div>
        <div style="padding-left: 40px" class="form-group departments col-md-4">
          <label style="visibility: hidden;"></label>
          <div class="">
            <label class="form-check-label">
              <input type="checkbox" class="form-check-input" value="Protocol">Protocol
            </label>
          </div>
          <div class="">
            <label class="form-check-label">
              <input type="checkbox" class="form-check-input" value="Ushering">Ushering
            </label>
          </div>
          <div class="">
            <label class="form-check-label">
              <input type="checkbox" class="form-check-input" value="Media">Media
            </label>
          </div>
          <div class="">
            <label class="form-check-label">
              <input type="checkbox" class="form-check-input" value="Prayer">Prayer
            </label>
          </div>
          <div class="">
            <label class="form-check-label">
              <input type="checkbox" class="form-check-input" value="Sign Language">Sign Language
            </label>
          </div>
        </div>

        <div class="form-group col-md-4">
          <p class="error ordinationStatusError"></p>
          <select type="text" class="form-control" name="ordination" required>
            <option value="">Ordination Status</option>
            <option value="deacon">Deacon</option>
            <option value="asst_pastor">Assistant Pastor</option>
            <option value="pastor">Pastor</option>
          </select>
        </div>

        <div class="form-group col-md-4">
          <p class="error oridinationYearError"></p>
          <input 
            type="number"
            max="2020"
            min="1960"
            class="form-control" 
            name="last_ordained_year" 
            placeholder="Year Last Ordination" required>
        </div>

        <div class="form-group col-md-4">
          <p class="error workerYearError"></p>
          <input 
            type="number"
            max="2020"
            min="1960"
            class="form-control" 
            name="year_became_worker" 
            placeholder="Year Became Worker" required>
        </div>

        <div class="form-group col-md-4">
          <p class="error rccgYearError"></p>
          <input 
            type="number"
            max="2020"
            min="1960"
            class="form-control" 
            name="year_joined_rccg" 
            placeholder="Year Joined RCCG" required>
        </div>

        <div class="form-group col-md-4">
          <p class="error positionError"></p>
          <select type="text" class="form-control" name="position" required>
            <option value="">Current Position in Church</option>
            <option value="Worker">Worker</option>
            <option value="HOD">HOD</option>
            <option value="Minister">Minister</option>
            <option value="Pastorate">Pastorate</option>
          </select>
        </div>

        <div class="form-group col-md-8">
          <textarea 
            class="form-control" 
            rows="9" 
            name="other" 
            id="other" 
            placeholder="Other Information"></textarea>
        </div>
      </div>
      <div class="form-row">
        <div class="col-md-6">
          <p class="error imageError"></p>
          <label for="player-img"><b>Upload photo</b></label><br>
          <input type="file" name="image" id="player-img" class="" required>
        </div>
        <div class="col-md-6">
          <button type="submit" id='submit-form' class="btn btn-primary float-right">Submit</button>
        </div>
      </div>
    </form>
    <hr />
    <div class="alert" style="font-weight: bolder;">
      
    </div>
  </div>
</div>
</body>
</html>
